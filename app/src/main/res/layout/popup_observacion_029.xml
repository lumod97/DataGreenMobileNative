<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/c029_img_Cerrar_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/i_close" />

        </LinearLayout>


        <TextView

            android:id="@+id/c029_txv_Observacion_Etq_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/auxiliar_02"
            android:text="Observacion:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/c029_eml_Observacion_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_r_grismasclaro"
            android:ems="10"
            android:fontFamily="@font/auxiliar_02"
            android:gravity="start|top"
            android:hint="Escribe algo..."
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="5"
            android:minLines="5"
            android:padding="7dp"
            android:scrollbars="vertical"
            android:textColorHint="@color/grisAux"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/c029_fab_Ok_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/i_done" />

    </LinearLayout>

</RelativeLayout>